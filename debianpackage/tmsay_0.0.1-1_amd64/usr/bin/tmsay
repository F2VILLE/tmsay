#!/bin/sh

if [ -z "$1" ]; then
    echo "Usage: tmsay <text>"
    exit 1
fi

repeat(){
    # Do nothing if $1 is not a number or not a positive number
    if ! [ "$1" -eq "$1" ] 2>/dev/null || [ "$1" -le 0 ]; then
        return
    fi
	for i in $(seq 1 $1); do echo -n "$2"; done;
}

txt="$*"
txtlen=${#txt}
sublining=$(repeat $(($txtlen-25)) "_")
spacing=$(repeat $(($txtlen-25)) " ")
aftertxtspacing=""

if [ $txtlen -lt 25 ]; then
    aftertxtspacing=$(repeat $((25-$txtlen)) " ")
fi

cat << EOF
                  _____________________________________$sublining
                 /       $spacing                              \\
                |        $txt     $aftertxtspacing |
                 \\__________________________  $(echo -n $sublining)_________/
                                            \\|
                                                        ,,.. .***,,//*/,*.....*.,..  .                    
                                                    ,,,,**#(///((//((/(/(((((///**,.,,,..                  
                                                 .//(((//(((/*//(#(/(((##%%%##((###/((*//*.,..             
                                               *((#############(///******////(##(##%%%(#((//,..
                                            ./(#%%%%%#####(((((/**,,,,,,,,,,**//(#%%%#%%###(*,,.
                                           /(##%###%##((///////*****,,,,,.....,,//((###%&%#%%(,.
                                          /((#####(((////****/******,,,,,........,*//#(###%%##/*,,
                                        ./(//(((((((/////*****//*/***,,,,,........,*/(##(##&&###/,
                                        *(**/((((((////////*///////*****,,,,.....,,*/(#(%##(#%(##*,
                                       *#***//////////////////////*/*,*,*,,,,,,.,***/(#(%%#####((*,
                                       /%**////////////////////**/****,,,,,,,..,,,,/**/#(######((#*,
                                       (#*//////////////////////*/******,,,,,,,,,,,,,**////(#%%###(*,
                                       /////////////*////////////////////*****,,,,,,,,***/*/((##%(*,,
                                       *#///////((/////*//////((#%###(((//****///,,,,,,****,/****(#((,
                                        /(////(((((/(((((/((((######%%&&&%%#%##,**,,,,,,***,,***/,*/(/,
                                         (**///(#%%%%%###(/////(%%%%####((((///********,,,,,,**/**,*//,
                                          *(#####%&&&%%%%///**//((#%%#####(((/**/****,,,,,,,..,/((/,/*,
                                          *(#&&%%####%###(//***////////(((///*/*****,,******,,,*/(/*,,
                                           *(%####%%%##(#((/*,*****///(((///******************,/*,***,
                                            */((###(((((((///******/((/((((/(/////***********,,/*,**   
                                             /#((((((((((////**,,,,,/((###(((((((#((/********,*/**,    
                                             /((((((((##(####((%%%((//((((##(((((((((/*******,,,           
                                              ((((((####((#%%%%###(((//////#((/(/(((((//**/****,           
                                              *(#################((/(/////(((/(//(((((//////***,           
                                               /######(######(###%%%#((///(##////((((((//////**,,          
                                                (#########%&#((((((/////***/((((((##(((/(/////*,,          
                                                 #####(########%#####((((////*/(((((((((((((//,,,%&&&%*    
                                                  (#######((########(((///////*//((//((##(((//**,*&&&&%%  
                                                    %%%%###(##((((((/////(//////(/((((((((////***,*&&&&&#( 
                                                      %%%###((#((((((((((///((((###((((((/(///*****(&&&%%%%
                                                        *%%##############%#%%#((((((((((((/(///****#%%%%%&&
                                                           /#%%%%%%&&%%%%%%%####(###(((((///////*/(%%%%%&&&
EOF